<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}}</title>
</head>
<body>
  <header>
    <nav>
      <a href="/">Inicio</a> |
      <a href="/products">Productos</a> |
      <a id="cartLink" href="#">Ver Carrito</a> <!-- Enlace al carrito -->
    </nav>
  </header>
  {{{body}}}
  <footer>
    <p>Proyecto Final Backend I Cristobal Hiza</p>
  </footer>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/index.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const cartLink = document.getElementById('cartLink');
      const cartId = localStorage.getItem('cartId');
      
      if (cartId) {
        cartLink.href = `/carts/${cartId}`; // Actualiza el enlace con el cartId almacenado
      } else {
        cartLink.href = '#'; // Si no hay carrito, deshabilitar el enlace
        alert('No se ha encontrado un carrito en la sesi√≥n actual.');
      }
    });
  </script>
</body>
</html>
